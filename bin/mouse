#! /bin/bash

if [[ -d /System/Library/CoreServices/Finder.app ]]
then
#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="-e \033[31m"
#green start
	GNS="-e \033[1;32m"
else
#blue start 
	BS="-e \e[1;34m"
#color end
	CE="\e[0m"
#red start
	RS="-e \e[0;31m"
#green start
	GNS="-e \e[1;32m"
fi

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
sleep 1
echo ""$BS"[*] "$CE"Installing update..."$CE""
{
rm -r ~/mouse
rm /bin/mouse
rm /usr/local/bin/mouse
cd ~
git clone https://github.com/entynetproject/mouse.git
cd mouse
chmod +x install.sh
./install.sh
} &> /dev/null
echo ""$GNS"[*] "$CE"Successfully updated..."$CE""
sleep 1
exit
fi

cd
if [[ -d ~/mouse ]]
then
{
cd ~/mouse
} &> /dev/null
python mouse.py
else
{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd
{
git clone https://github.com/entynetproject/mouse.git
cd ~/mouse
} &> /dev/null
python mouse.py
else
cd
sleep 1
exit
fi
fi
