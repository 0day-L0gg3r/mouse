#! /bin/bash


#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="-e \033[31m"
#green start
	GNS="-e \033[32m"
#white start
        WHS="\033[0;97m"
	
if [[ "$1" = "-c" || "$1" = "-c" ]]
then
if [[ "$2" = "downloads" ]]
then
{
cd
rm -r mouse/dewnloads
echo -e ""$BS"[*]"$WHS" Cleaning up..."
sleep 10
} &> /dev/null
exit

elif [[ "$2" = "payloads" ]]
then
{
cd
rm -r mouse/payloads
echo -e ""$BS"[*]"$WHS" Cleaning up..."
sleep 10
} &> /dev/null
exit
fi
fi

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
sleep 1
echo ""$BS"[*] "$WHS"Installing update..."$CE""
{
rm -r ~/mouse
rm /bin/mouse
rm /usr/local/bin/mouse
cd ~
git clone https://github.com/entynetproject/mouse.git
cd mouse
chmod +x install.sh
./install.sh
} &> /dev/null
echo ""$GNS"[*] "$WHS"Successfully updated..."$CE""
sleep 1
exit
fi

cd
if [[ -d ~/mouse ]]
then
{
cd ~/mouse
} &> /dev/null
trap '' INT TSTP
trap '' 2
python mouse.py
else
{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd
{
git clone https://github.com/entynetproject/mouse.git
cd ~/mouse
} &> /dev/null
trap '' INT TSTP
trap '' 2
python mouse.py
else
cd
sleep 1
exit
fi
fi
