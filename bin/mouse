printf '\033]2;Mouse Payload Loader\a'

cd ~
if [[ -d ~/mouse ]]
then
{
cd ~/mouse
} &> /dev/null
chmod +x mouse
./mouse
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/mouse.git
cd ~/mouse
} &> /dev/null
chmod +x mouse
./mouse
else
cd ~
sleep 1
exit
fi
fi
